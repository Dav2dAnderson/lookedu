{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/admin-secure-panel/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/user/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/media/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ]
}